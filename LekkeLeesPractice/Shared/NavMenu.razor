

<div class="container-fluid g-0">

    <div class="navbar navbar-dark px-3 py-3 navbar-color navbar-expand-md">
        @*<img class="navbar-brand" src="/img/LekkeLeesLogo.svg" alt="LekkeLees.com" />*@
        
        <div class="navbar-brand-wrapper">
            <a href="">
                <img class="navbar-brand-img" src="/img/LekkeLeesLogoOnlyRounded.svg" />
            </a>
        </div>

        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>

        <input type="text" placeholder="Search books" style="border-radius:20px 0px 0px 20px;padding: 5px 5px 0px 5px" />
        <a class="oi oi-magnifying-glass" style="background-color: white;padding: 5px 5px 5px 0px"></a>

        <div class="@NavMenuCssClass navbar-collapse ">
            <ul class="navbar-nav mr-auto" >
                <li class="nav-item">
                    <NavLink class="nav-link" href="BookStore">
                        <span class="oi oi-plus"  aria-hidden="true"></span> Boekwinkel
                    </NavLink>
                </li>

                <li class="nav-item">
                    <NavLink class="nav-link" href="BookStore">
                        <span class="oi oi-mail" aria-hidden="true"></span> Kontak Ons
                    </NavLink>
                </li>

                <li class="nav-item user-nav-item ps-md-3 ps-2">
                    <div class="dropdown">
                        <a class="bi bi-person-circle nav-link-user text-decoration-none px-1" style="font-size: 25px;" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                            <span class="ps-1 dropdown-toggle"></span>
                        </a>

                        <ul class="dropdown-menu bg-dark navbar-dropdown" style="left: -8.6rem;" aria-labelledby="dropdownMenuButton1">
                            <li>
                                <a class="dropdown-item" href="#">My Bookshelf</a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="#">Manage Account</a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="#">Login</a>
                            </li>
                        </ul>

                    </div>
                </li>

            </ul>
        </div>

    </div>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
